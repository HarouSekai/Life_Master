<%= render partial: "shared/header" %>
<div class="wrapper">
  <div class="main">
    <div class="user-info">
      <div class="mypage-avatar">
        <div class="mypage-avatar-inner">
          <%= image_tag "user.svg" %>
        </div>
        <%#= link_to "/avatars/edit", class: "edit-btn", id: "mypage-avatar-edit" do %>
          <%#= image_tag "edit.svg", alt: "編集" %>
        <%# end %>
      </div>
      <div class="mypage-name">
        <%= @user.name %>
      </div>
      <div class="mypage-edit-or-delete">
        <%#= link_to "アカウント編集", "/users/edit" %>
        <%#= link_to "アカウント削除", "/users/destroy" %>
      </div>
    </div>

    <!-- 記事一覧 -->
    <div class="articles">
      <%= render partial: "shared/article", collection: @articles %>
    </div>
    <!-- //記事一覧 -->
  </div>
  <!-- //main -->
  <div class="side">

  </div>
  <!-- //side -->
</div>
<!-- //wrapper -->
<%= render partial: "shared/footer" %>