<%= render partial: "shared/second_header" %>
<div class="wrapper">
  <div><%= flash[:notice] %></div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <label for="name" class="user-form-item">ユーザー名</label>
      <%= f.text_field :name, class: "user-form-item", autofocus: true %>
    </div>
    <div class="field">
      <label for="email" class="user-form-item">メールアドレス</label>
      <%= f.email_field :email, class: "user-form-item", autocomplete: "email" %>
    </div>

    <div class="field">
      <label for="password" class="user-form-item">パスワード</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, class: "user-form-item", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <label for="password_confirmation" class="user-form-item">パスワード（確認）</label>
      <%= f.password_field :password_confirmation, class: "user-form-item", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", id: "submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<%= render partial: "shared/footer" %>
