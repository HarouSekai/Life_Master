<div class="article">
  <div class="article-header">
    <div class="article-title">
      <%= link_to article.title, user_article_path(article.user.id,article.id) %>
    </div>
    <div class="article-header-right">
      <div class="article-index-avatar">
        <%= image_tag "user.svg" %>
      </div>
      <div class="article-index-user-name">
        <%= article.user.name %>
      </div>
    </div>
  </div>
  <div class="article-content">
    <%= article.summary.match(/[^\n]{,25}/)[0] + "..." %>
  </div>
</div>
