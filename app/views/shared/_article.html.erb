<div class="article">
  <div class="article-header">
    <div class="article-title">
      <%= link_to article.title.match(/[^\n]{,25}/)[0], user_article_path(article.user,article) %>
    </div>
    <div class="article-header-right">
      <div class="article-index-avatar">
        <% if article.user.avatar == nil %>
          <%= image_tag "user.svg" %>
        <% else %>
          <%= image_tag article.user.avatar.avatar %>
        <% end %>
      </div>
      <div class="article-index-user-name">
        <%= article.user.name %>
      </div>
    </div>
  </div>
  <div class="article-content">
    <%= article.summary.match(/[^\n]{,25}/)[0] + "..." %>
  </div>
</div>
