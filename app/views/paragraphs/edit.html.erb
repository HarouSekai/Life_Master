<%= render partial: "shared/header" %>
<div class="wrapper">
  <div class="main">
    <div><%= flash[:notice] %></div>
    <div class="flex">
      <h2>段落を編集</h2>
      <label class="edit-btn" id="edit-paragraph-btn">
        <%= image_tag "edit.svg", alt: "編集" %>
      </label>
    </div>

    <%= form_with url: user_article_paragraph_path(@user, @article, @paragraph), id: "edit-paragraph-form", method: :patch, local: true do |f| %>
      <%= f.label :headline, "見出し" %>
      <%= f.text_field :headline, value: @paragraph.headline %>
      <%= f.label :content, "本文" %>
      <%= f.text_area :content, value: @paragraph.content %>

      <div class="under-paragraph-form-btn">
        <div class="cancel-btn">
          <%= link_to "キャンセル", edit_user_article_path(@user, @article) %>
        </div>
        <div class="reset-btn">
          <%= link_to "リセット", edit_user_article_paragraph_path(@user, @article, @paragraph) %>
        </div>
        <%= f.submit "保存", class: "save-btn", id: "edit-submit-btn" %>
      </div>
      
    <% end %>
    <!-- //edit-paragraph-form -->

    <div class="hard-code-images">
      <%= render partial: "image", collection: @images %>
    </div>
    <!-- //hard-code-images -->

    <div id="add-image-bar">
      <div id="image-bar"></div>
      <%= link_to "画像を追加", new_user_article_paragraph_image_path(@user, @article, @paragraph), class: "save-btn", id: "add-image-btn" %>
    </div>
    <!-- //add-image-bar -->
    <%= link_to "戻る", edit_user_article_path(@user, @article), id: "return" %>
  </div>
  <!-- //main -->
  <div class="side">
  </div>
  <!-- //side -->
</div>
<!-- //wrapper -->
<%= render partial: "shared/footer" %>