<div class="hard-code-image">
  <% if user_signed_in? && current_user.id == image.paragraph.article.user.id %>
    <div class="flex">
      <div>画像を編集</div>
      <%= link_to edit_user_article_paragraph_image_path(image.paragraph.article.user, image.paragraph.article, image.paragraph, image), class: "edit-btn" do %>
        <%= image_tag "edit.svg", alt: "編集" %>
      <% end %>
      <%= link_to user_article_paragraph_image_path(image.paragraph.article.user, image.paragraph.article, image.paragraph, image), class: "trash-btn", method: :delete do %>
        <%= image_tag "trash.svg", alt: "削除" %>
      <% end %>
    </div>
  <% end %>
  <%= image_tag image.image %>
  <div class="hard-code-image-exp">
    <%= image.image_explanation %>
  </div>
</div>
<!-- //hard-code-image -->